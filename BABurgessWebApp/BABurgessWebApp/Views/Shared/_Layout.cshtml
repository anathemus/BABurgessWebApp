<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @{ 
        String context = ViewContext.RouteData.Values["Action"].ToString();
    }
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Benjamin Burgess", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggle btn-dark" data-toggle="collapse" data-target="#mainNavBar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="mainNavBar" class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item @(context == "Index" ? "active" : "")">@Html.ActionLink("Bio", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item @(context == "Skills" ? "active" : "")">@Html.ActionLink("Skills", "Skills", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item dropdown @(context == "Projects" ? "active" : "")">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Projects
                        </a>
                        <div class="dropdown-menu bg-info" aria-labelledby="navbarDropdownMenuLink">
                            @Html.ActionLink("Put It Down", "Projects", "Home", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("c$50 Finance", "Projects", "Home", null, new { @class = "dropdown-item" })
                        </div>
                    </li>
                    <li class="nav-item @(context == "Education" ? "active" : "")">@Html.ActionLink("Education", "Education", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item @(context == "Feedback" ? "active" : "")">@Html.ActionLink("Feedback", "Feedback", "Home", null, new { @class = "nav-link" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Benjamin Burgess' ASP.NET Application</p>
            <div id="MCSASQL" class="logo"></div>
            <div id="MCSEDMA" class="logo"></div>
            <p>Microsoft is a registered trademark of Microsoft Corporation in the United States and other countries.</p>
            <div class="mediaCheck"></div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/Site.js"></script>
</body>
</html>
